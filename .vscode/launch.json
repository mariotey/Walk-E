    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: MediaPipe",
            "type": "python",
            "request": "launch",
            "program": "./code_python/main_mediapipe.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP":"Walk-E/main_flask.py"
            },
            "args": [
                "run",
                "--no-debugger",
                // "--port=5002"
            ],
            "jinja": true
        }
    ]
}